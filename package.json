{
  "name": "sample-app-lwc",
  "version": "0.0.1",
  "description": "Sample Talon Application with Lightning Web Components",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://nexus.soma.salesforce.com/nexus/content/repositories/npmjs-internal/"
  },
  "config": {
    "lwcVersion": "1.0.1",
    "talonVersion": "0.16.0"
  },
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build && npm run validate",
    "clean": "rm -rf dist",
    "validate": "talon validate .",
    "build:talon": "talon generate .",
    "build:talon:designmode": "talon generate . --isDesignMode=true",
    "build:public": "cpx \"src/public/**/*\" dist/public --verbose",
    "build:resources": "node scripts/copy-resources.js",
    "build:common": "npm run build:public && npm run build:resources",
    "build:lib": "rollup -c ./libs/rollup.libs.config.js",
    "build": "npm run clean && npm run build:lib && npm run validate && npm run build:talon && npm run build:common",
    "build:designmode": "npm run build:talon:designmode && npm run build:common",
    "XXXserve": "MODE=\"${MODE:-dev}\" talon run .",
    "serve:designmode": "MODE=\"${MODE:-dev}\" talon run . --isDesignMode=true",
    "XXXstart": "npm run build & npm run serve --silent",
    "start": "node ./scripts/start.js",
    "start:designmode": "npm run build:designmode & npm run serve:designmode --silent",
    "update:versions": "yarn add -D @lwc/engine@$npm_package_config_lwcVersion @talon/compiler@$npm_package_config_talonVersion"
  },
  "engines": {
    "node": ">=10.0"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@lwc/engine": "1.0.2-222.17",
    "@salesforce-ux/design-system": "^2.9.4",
    "@sfcc-dev/core": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/core-graphql": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/logger": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/apiconfig": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/sfcc-productapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/sfcc-contentapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/sfcc-customerapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-dev/sfcc-loginapi": "0.0.1-sfcc-alpha-1",
    "@talon/compiler": "0.16.0",
    "@talon/force-modules": "^0.0.6",
    "apollo-boost": "^0.1.27",
    "apollo-client": "^2.4.12",
    "apollo-datasource-rest": "^0.3.2",
    "apollo-server": "^2.3.2",
    "apollo-server-express": "^2.3.2",
    "colors": "^1.3.2",
    "cpx": "^1.5.0",
    "graphql": "0.13.1",
    "graphql-tag": "^2.10.1",
    "lightning-components-stubs": "^0.0.9",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-compat": "0.21.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-pluginutils": "^2.3.3",
    "ui-lightning-community": "^1.0.8"
  }
}
