{
  "name": "storefront-lwc",
  "version": "0.0.1",
  "description": "Sample Storefront Application with Lightning Web Components",
  "license": "MIT",
  "config": {
    "lwcVersion": "1.0.1",
    "talonVersion": "0.16.0"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:public": "cpx \"src/public/**/*\" dist/public --verbose",
    "build:common": "yarn run build:public && yarn run build:resources",
    "build:validate": "webruntime validate .",
    "build:components": "webruntime generate .",
    "build:resources": "node scripts/copy-resources.js",
    "build:lib": "rollup -c ./libs/rollup.libs.config.js",
    "build": "yarn run build:lib && yarn run build:validate && yarn run build:components && yarn run build:resources && yarn run build:common",
    "start": "node ./scripts/start.js",
    "start:watch": "concurrently \"node ./scripts/start.js\" \"node scripts/copy-resources.js --watch\"",
    "stop": " lsof -t -i tcp:3000 | xargs kill"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-regenerator": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@lwc/engine": "1.0.2-222.17",
    "@salesforce-ux/design-system": "^2.9.4",
    "@sfcc-bff/contentapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-bff/customerapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-bff/loginapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-bff/productapi": "0.0.1-sfcc-alpha-1",
    "@sfcc-core/apiconfig": "0.0.1-sfcc-alpha-1",
    "@sfcc-core/core": "0.0.1-sfcc-alpha-1",
    "@sfcc-core/core-graphql": "0.0.1-sfcc-alpha-1",
    "@sfcc-core/logger": "0.0.1-sfcc-alpha-1",
    "@webruntime/cli": "^0.18.10",
    "@webruntime/compiler": "^0.18.10",
    "apollo-boost": "^0.1.27",
    "apollo-client": "^2.4.12",
    "apollo-datasource-rest": "^0.3.2",
    "apollo-server": "^2.3.2",
    "apollo-server-express": "^2.3.2",
    "colors": "^1.3.2",
    "concurrently": "^5.0.0",
    "cpx": "^1.5.0",
    "graphql": "0.13.1",
    "graphql-tag": "^2.10.1",
    "oclif": "^1.13.6",
    "rollup": "^0.66.6",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-compat": "0.21.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-pluginutils": "^2.3.3"
  }
}
